<% layout('layout') %>
<% include('partials/header') %>

<section class="recipe-list">
    <h2>All Recipes</h2>
    <% recipes.forEach(recipe => { %>
        <div class="recipe-card">
            <h3><a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a></h3>
            <p><%= recipe.ingredients.substring(0, 100) %>...</p>
        </div>
    <% }) %>
</section>